{
  "name": "app-electron",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.app-project.visualdata",
    "productName": "VisualData App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build_resources/backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "compression": "maximum",
    "win": {
      "target": "nsis",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VisualData App"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^25.0.9",
    "electron": "^30.0.0",
    "electron-builder": "^26.4.0",
    "electron-packager": "^17.1.2",
    "typescript": "^5.9.3"
  }
}